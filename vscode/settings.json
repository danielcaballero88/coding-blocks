{
  "workbench.editorAssociations": {
      "*.ipynb": "jupyter-notebook"
  },
  "notebook.cellToolbarLocation": {
      "default": "right",
      "jupyter-notebook": "left"
  },
  // Workbench options
  "workbench.tree.indent": 30,
  "window.restoreWindows": "none",
  "files.hotExit": "off",
  "workbench.editor.enablePreview": false,
  "workbench.list.openMode": "doubleClick",
  //  Editor options default
  "editor.rulers": [50, 72, 80],
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  // Editor options language specific
  "[markdown]": {
      "editor.rulers": [80],
      "editor.tabSize": 4,
      "editor.insertSpaces": true,
      "files.trimTrailingWhitespace": true,
      "files.trimFinalNewlines": true,
  },
  "[python]": {
      "editor.rulers": [72, 80],
      "editor.tabSize": 4,
      "editor.insertSpaces": true,
      "files.trimTrailingWhitespace": true,
      "files.trimFinalNewlines": true,
  },
  "[git-commit]": {
      "editor.rulers": [50, 72]
  },
  // Pylance import path finder
  "python.analysis.extraPaths": [
      "valuechecker",
  ],
  "workbench.editor.untitled.hint": "hidden",
  "editor.acceptSuggestionOnCommitCharacter": false,
  "editor.acceptSuggestionOnEnter": "off",
  // Highlight extension
  "highlight.regexes": {
      "((?:<!-- *)?(?:#|// @|//|./\\*+|<!--|--|\\* @|{!|{{!--|{{!) *TODO(?:\\s*\\([^)]+\\))?:?)((?!\\w)(?: *-->| *\\*/| *!}| *--}}| *}}|(?= *(?:[^:]//|/\\*+|<!--|@|--|{!|{{!--|{{!))|(?: +[^\\n@]*?)(?= *(?:[^:]//|/\\*+|<!--|@|--(?!>)|{!|{{!--|{{!))|(?: +[^@\\n]+)?))": {
          "filterFileRegex": ".*(?<!CHANGELOG.md)$",
          "decorations": [
              {
                  "overviewRulerColor": "#ffcc00",
                  "backgroundColor": "#ffcc0055",
                  "color": "#1f1f1f",
                  "fontWeight": "bold"
              },
              {
                  // "backgroundColor": "#ffcc0055",
                  // "color": "#1f1f1f"
              }
          ]
      },
      "((?:<!-- *)?(?:#|// @|//|./\\*+|<!--|--|\\* @|{!|{{!--|{{!) *(?:FIXME|FIX|BUG|UGLY|DEBUG|HACK)(?:\\s*\\([^)]+\\))?:?)((?!\\w)(?: *-->| *\\*/| *!}| *--}}| *}}|(?= *(?:[^:]//|/\\*+|<!--|@|--|{!|{{!--|{{!))|(?: +[^\\n@]*?)(?= *(?:[^:]//|/\\*+|<!--|@|--(?!>)|{!|{{!--|{{!))|(?: +[^@\\n]+)?))": {
          "filterFileRegex": ".*(?<!CHANGELOG.md)$",
          "decorations": [
              {
                  "overviewRulerColor": "#cc0000",
                  "backgroundColor": "#cc000055",
                  "color": "#1f1f1f",
                  "fontWeight": "bold"
              },
              {
                  // "backgroundColor": "#cc000055",
                  // "color": "#1f1f1f"
              }
          ]
      },
      "((?:<!-- *)?(?:#|// @|//|./\\*+|<!--|--|\\* @|{!|{{!--|{{!) *(?:REVIEW|OPTIMIZE|TSC)(?:\\s*\\([^)]+\\))?:?)((?!\\w)(?: *-->| *\\*/| *!}| *--}}| *}}|(?= *(?:[^:]//|/\\*+|<!--|@|--|{!|{{!--|{{!))|(?: +[^\\n@]*?)(?= *(?:[^:]//|/\\*+|<!--|@|--(?!>)|{!|{{!--|{{!))|(?: +[^@\\n]+)?))": {
          "filterFileRegex": ".*(?<!CHANGELOG.md)$",
          "decorations": [
              {
                  "overviewRulerColor": "#00ccff",
                  "backgroundColor": "#00ccff",
                  "color": "#1f1f1f",
                  "fontWeight": "bold"
              },
              {
                  // "backgroundColor": "#00ccff",
                  // "color": "#1f1f1f"
              }
          ]
      },
      "((?:<!-- *)?(?:#|// @|//|./\\*+|<!--|--|\\* @|{!|{{!--|{{!) *(?:IDEA)(?:\\s*\\([^)]+\\))?:?)((?!\\w)(?: *-->| *\\*/| *!}| *--}}| *}}|(?= *(?:[^:]//|/\\*+|<!--|@|--|{!|{{!--|{{!))|(?: +[^\\n@]*?)(?= *(?:[^:]//|/\\*+|<!--|@|--(?!>)|{!|{{!--|{{!))|(?: +[^@\\n]+)?))": {
          "filterFileRegex": ".*(?<!CHANGELOG.md)$",
          "decorations": [
              {
                  "overviewRulerColor": "#cc00cc",
                  "backgroundColor": "#cc00cc",
                  "color": "#1f1f1f",
                  "fontWeight": "bold"
              },
              {
                  // "backgroundColor": "#cc00cc",
                  // "color": "#1f1f1f"
              }
          ]
      },
      "(:(?:param|return))(.+)?(:)": {
          "regexFlags": "g",
          "filterLanguageRegex": "python",
          "decorations": [
              { "backgroundColor": "#111155", "color": "#eeeeaa"},
              { "backgroundColor": "#111155", "color": "#eeaaee"},
              { "backgroundColor": "#111155", "color": "#eeeeee"}
          ]
      },
      "(?:\"\"\")(?:.*)(?:\\n)((?:\\s*\\w+:))(.*)(?:\\n)(?:.*)(?:\"\"\")": {
          "regexFlags": "g",
          "filterLanguageRegex": "python",
          "decorations": [
              { "color": "#5555ff" },
              { "color": "#55ff55" },
              { "color": "#5555ff" }
          ]
      },
      // "<>": {
      //     "regexFlags": "g",
      //     "decorations": [
      //         { "color": "green" }
      //     ]
      // }
  },
  "update.mode": "none",
  "extensions.ignoreRecommendations": true,
  "security.workspace.trust.untrustedFiles": "open",
  "editor.detectIndentation": false,
  "editor.cursorWidth": 3,
  // "python.analysis.useImportHeuristic": true
}